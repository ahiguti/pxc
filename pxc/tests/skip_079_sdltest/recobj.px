    "  mat3 normal_matrix = mat3(model_matrix);\n",
    m::concat{
    "  mat3 normal_matrix = mat3(model_matrix[0].xyz, model_matrix[1].xyz,",
    "    model_matrix[2].xyz);\n"}
    },
    "  vary_position = gpos4.xyz / gpos4.w;\n",
    "  vary_normal = normal_matrix * normal;\n",
    "  vary_tangent = normal_matrix * tangent.xyz;\n",
    "  vary_uvw = uvw;\n",
    m::cond{is_ds1st,
      "",
      m::concat{
	"  vary_binormal = cross(vary_normal, vary_tangent) * tangent.w;\n",
	m::cond{enable_shadowmapping,
	  "  vary_smpos = shadowmap_vp * gpos4;\n",
	  ""
	}
      }
    },
    "}\n"};

