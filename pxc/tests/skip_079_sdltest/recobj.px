      },
      m::concat{
      "  float lflag = 1.0;\n"
      }
    }, /* enable_shadowmapping */
    "  float lstr = lflag;\n",
    "  float dist = min(20.0 / light_distance, 1.0);\n",
    "  vec3 nor = vary_normal;\n",
    // "  if (light_distance < 20.0) {\n",
