function uint draw_frame(camera_info mutable& cam, ptr{scene_node} const& sn,
  main_shader_ptr const& sdr, shadowmap_fbo const& sfbo,
  shadowmap_shader_ptr const& smsdr, zprepass_shader_ptr const& zpsdr,
  deferred_shading_fbo const& dsfbo, ds1st_shader_ptr const& ds1sdr,
  ds2nd_shader_ptr const& ds2sdr,
  buffer_object{main_vertex_attributes} const& bo, font_shader_ptr const& psdr,
  font_texture_info const& fti, cstrref const& mess)
{
  // println("draw_frame enter");
  // const sn = bo.instantiate_scene(static_cast{int}(cam.scene));
  /* shadowmap view and view-projection matrix */
  {
    cam.light_pos = cam.camera_pos +
      cam.camera_angle.to_mat3() * glm::make_vec3(3.0, 3.0, 5.0);
    cam.light_angle = cam.camera_angle;
  }
  const sm_view = (
    glm::mat4().translate(cam.light_pos) * cam.light_angle.to_mat4())
    .inverse();
  const sm_vp = cam.sm_projection * sm_view;
  if (m::ne{use_instanced, 0}) {
    /* prepare instances */
    sn->prepare_instances{buffer_object{main_vertex_attributes}}
      (bo, glm::mat4());
  }
  /* shadowmap */
  if (m::ne{enable_shadowmapping, 0}) {
    int saved_fb;
    glGetIntegerv(GL_FRAMEBUFFER_BINDING, address(saved_fb));
    // sdllog(string_join{" "}("saved_fb", saved_fb));
    /* shadowmap */
    // sdllog(string_join{" "}("draw_frame smsdr", smsdr->program));
    // println("smsdr program: ", smsdr->program);
    glUseProgram(smsdr->program);
    glBindFramebuffer(GL_FRAMEBUFFER, sfbo.fbo);
    glViewport(0, 0, static_cast{GLsizei}(sfbo.sm_width),
      static_cast{GLsizei}(sfbo.sm_height));
    glEnable(GL_CULL_FACE);
    // glFrontFace(GL_CW);
    // glCullFace(GL_FRONT);
    glEnable(GL_DEPTH_TEST);
    if (m::ne{use_depth_texture, 0}) {
      glColorMask(0, 0, 0, 0);
      // glColorMask(1, 1, 1, 1);
    } else {
      glColorMask(1, 1, 1, 1);
    }
    glDepthFunc(GL_LEQUAL);
    glDisable(GL_BLEND);
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    {
      if (false) {
	const y = sm_view * glm::make_vec4(0.0, 0.0, 0.0, 1.0);
	println("sm_mv(0) =>", y);
	mutable x = sm_vp * glm::make_vec4(0.0, 0.0, 0.0, 1.0);
	println("sm_mvp(0) =>", x);
	glm::mat4 mutable view;
	view = (view.translate(cam.camera_pos) * cam.camera_angle.to_mat4())
	  .inverse();
	mutable aa = cam.projection * view * glm::make_vec4(0.0, 0.0, 0.0, 1.0);
	println("cam_mvp(0) =>", aa);
      }
      if (m::ne{use_instanced, 0}) {
	glUniformMatrix4fv(smsdr->u_shadowmap_vp, 1, 0, sm_vp.crawptr());
	sn->draw_instanced
	  {buffer_object{main_vertex_attributes}, shadowmap_shader}
	  (bo, glm::mat4(), *smsdr);
      } else {
	function void set_uniform_cb(glm::mat4 const& model_mat)
	{
	  /* note: sm_vp is already applied to model_mat. model_mat is
	   * actually the mvp matrix. */
	  glUniformMatrix4fv(smsdr->u_model_matrix, 1, 0, model_mat.crawptr());
	  //const sm_mvp = sm_vp * model_mat;
	  //glUniformMatrix4fv(smsdr->u_shadowmap_mvp, 1, 0, sm_mvp.crawptr());
	  // println("shadowmap_mvp(L)", sm_mvp.cslice());
	  // glUniformMatrix4fv(smsdr->u_shadowmap_mvp, 1, 0, m.crawptr());
	}
	sn->draw{set_uniform_cb, buffer_object{main_vertex_attributes},
	  shadowmap_shader}(bo, sm_vp, *smsdr);
      }
      if (false) {
	farray{int, 4} view;
	/*
	if (cam.proj_light) {
	  glGetIntegerv(GL_VIEWPORT, view.rawptr());
	  // println(view);
	} else {
	*/
	  view[2] = sfbo.sm_width;
	  view[3] = sfbo.sm_height;
	/*
	}
	*/
	mutable dbuf = darray{uchar}(
	  static_cast{size_t}(view[2] * view[3] * 4), 0);
	glReadPixels(0, 0, view[2], view[3], GL_RGBA,
	  GL_UNSIGNED_BYTE, dbuf.rawptr().void());
	const sli = dbuf[0 .. 10];
	println("readpixels", sli);
	/*
	float avg = 0.0f;
	float minval = 2.0f;
	float maxval = -2.0f;
	for (const i, const v: dbuf) {
	  avg += v;
	  if (v < minval) { minval = v; }
	  if (v > maxval) { maxval = v; }
	}
	avg /= static_cast{float}(dbuf.size());
	// println("avg", avg, "min", minval, "max", maxval);
	{
	  float const perspective_distance = 1.0;
	  float const min_distance = 0.2;
	  const d = cast_float(perspective_distance);
	  const near = cast_float(d - min_distance);
	  const far = cast_float(d + min_distance + distance_max);
	  const distance = far * near / (avg * (far - near) - far);
	  // println("dbuf avg", avg, "distance", distance);
	}
	*/
      }
    }
    glBindFramebuffer(GL_FRAMEBUFFER, static_cast{uint}(saved_fb));
  }
  glViewport(0, 0, static_cast{GLsizei}(cam.screen_width),
    static_cast{GLsizei}(cam.screen_height));
  /* z-prepass */
  if (m::ne{enable_zprepass, 0}) {
    glUseProgram(zpsdr->program);
    glEnable(GL_CULL_FACE);
    glCullFace(GL_BACK);
    glEnable(GL_DEPTH_TEST);
    glDepthFunc(GL_LESS);
    glDepthMask(1);
    glDisable(GL_BLEND);
    glClear(GL_DEPTH_BUFFER_BIT);
    glColorMask(0, 0, 0, 0);
    // glClear(GL_DEPTH_BUFFER_BIT);
    mutable view = glm::mat4();
    if (cam.proj_light) {
      view = (view.translate(cam.light_pos) * cam.light_angle.to_mat4())
	.inverse();
    } else {
      view = (view.translate(cam.camera_pos) * cam.camera_angle.to_mat4())
	.inverse();
    }
    const vp = cam.projection * view;
    glUniformMatrix4fv(zpsdr->u_view_projection_matrix, 1, 0, vp.crawptr());
    const model_cur = glm::mat4();
    if (m::ne{use_instanced, 0}) {
      sn->draw_instanced{buffer_object{main_vertex_attributes}, zprepass_shader}
	(bo, model_cur, *zpsdr);
    } else {
      function void set_uniform_cb(glm::mat4 const& model_mat)
      {
	glUniformMatrix4fv(zpsdr->u_model_matrix, 1, 0, model_mat.crawptr());
	/*
	glVertexAttrib4fv(static_cast{uint}(zpsdr->u_model_matrix),
	  model_mat.crawptr());
	glVertexAttrib4fv(static_cast{uint}(zpsdr->u_model_matrix + 1),
	  model_mat.crawptr() + 4U);
	glVertexAttrib4fv(static_cast{uint}(zpsdr->u_model_matrix + 2),
	  model_mat.crawptr() + 8U);
	glVertexAttrib4fv(static_cast{uint}(zpsdr->u_model_matrix + 3),
	  model_mat.crawptr() + 12U);
	*/
      }
      sn->draw
	{set_uniform_cb, buffer_object{main_vertex_attributes}, zprepass_shader}
	(bo, model_cur, *zpsdr);
    }
  }
  uint const tick_shadowmapping_shader = SDL_GetTicks();
  /* main or ds1 */
  if (true) {
    int saved_fb;
    if (m::ne{enable_deferred, 0}) {
      glGetIntegerv(GL_FRAMEBUFFER_BINDING, address(saved_fb));
      glBindFramebuffer(GL_FRAMEBUFFER, dsfbo.fbo);
      glViewport(0, 0, static_cast{GLsizei}(dsfbo.ds_width),
	static_cast{GLsizei}(dsfbo.ds_height));
      glUseProgram(ds1sdr->program);
    } else {
      glUseProgram(sdr->program);
    }
    glDisable(GL_BLEND);
    glEnable(GL_CULL_FACE);
    // glFrontFace(GL_CCW);
    glCullFace(GL_BACK);
    glEnable(GL_DEPTH_TEST);
    if (m::ne{enable_zprepass, 0}) {
      // glDepthMask(0);
      glColorMask(1, 1, 1, 1);
      glDepthFunc(GL_EQUAL);
      glClear(GL_COLOR_BUFFER_BIT);
    } else {
      glDepthMask(1);
      glDepthFunc(GL_LESS);
      glColorMask(1, 1, 1, 1);
      glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    }
    // glDepthFunc(GL_LESS);
    // glDepthRange(0.1, 1000.0); // FIXME
    /*
    {
    farray{float, 2} params;
    glGetFloatv(GL_DEPTH_RANGE, params.rawptr());
    println(params);
    }
    */
    /*
    const light = glm::make_vec3(2500.0, 2500.0, -2500.0);
    */
    const camera_target = cam.camera_angle.to_mat3() *
      glm::make_vec3(0.0, 0.0, -20.0);
    if (m::ne{enable_deferred, 0}) {
      /* noop */
    } else {
      glUniform3fv(sdr->u_light_pos, 1, cam.light_pos.crawptr());
      glUniform3fv(sdr->u_camera_pos, 1, cam.camera_pos.crawptr());
    }
    mutable view = glm::mat4();
    if (cam.proj_light) {
      view = (view.translate(cam.light_pos) * cam.light_angle.to_mat4())
	.inverse();
    } else {
