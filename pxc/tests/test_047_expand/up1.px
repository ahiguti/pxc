}

metafunction mf_str{t} m::map{m::member_functions{t}, meta::to_string};

struct {ityp} foo < ityp > {
  expand(fsym : mf_str{ityp}) {
    function string fsym(expand(m::args{m::local{ityp, fsym}})) {
      string s = m::to_string{fsym};
      s.append(":");
      s.append(x);
      s.append(":");
      metafunction mf m::local{ityp, fsym};
      s.append(m::full_string{m::arg_types{mf}});
