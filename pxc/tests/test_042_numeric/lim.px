public namespace lim;
import common -;
import meta m;
import numeric::limit -;

function {t} void t1()
{
  string s = m::to_string{t};
  s.append(" ");
  s.append(to_string(numeric_lowest{t}()));
  s.append(" ");
  s.append(to_string(numeric_highest{t}()));
  s.append(" ");
  s.append(to_string(numeric_smallest{t}()));
  println(s);
}

t1{bool}();
t1{short}();
t1{int}();
t1{long}();
t1{ushort}();
t1{uint}();
t1{ulong}();

