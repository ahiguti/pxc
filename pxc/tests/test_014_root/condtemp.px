
public namespace condtemp;
import common -;

function int inc(int mutable& x, int y)
{
  return (++x) + y;
}

function int bar(varray{int} mutable& p)
{
  return p[0];
}

function int foo(varray{int} mutable& p)
{
  if (inc(p[3], bar(p)) == 1000) { // calling bar() can possibly invalidate p[3]
    return 3;
  }
  return 5;
}

varray{int} p;
p.resize(10, int());
p[3] = 999;
int a = foo(p);
println(a);
