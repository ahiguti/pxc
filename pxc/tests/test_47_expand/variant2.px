function {t} void dump_arginfo()
{
  macro mfuncstr{t} m::metamap{m::member_functions{t}, m::to_string};
  macro seqstr{n} m::metamap{m::seq{n}, m::to_string};
  macro argexp{arg}
    m::list{
      m::concat{"a", m::at{arg, 0}}, // a0, a1, a2, ...
      m::add{m::mul{m::at{arg, 3}, 2}, m::at{arg, 4}} // byref * 2 + mutable
    };
  macro argexp_list{fsym}
    m::metamap{
      m::args{m::local{t, m::to_string{fsym}}},
      argexp
    };
  macro args_ae{fsym, ae}
    m::at{m::args{m::local{t, fsym}}, m::to_int{m::substring{ae, 1}}};
  macro argtype_ae{fsym, ae} m::at{args_ae{fsym, ae}, 2};
  expand(fsym : mfuncstr{t}) {
    expand(ae : argexp_list{fsym}) {
      println(m::concat{
	"funcname=", m::to_string{fsym}, " pass=mv name=", ae,
	" type=", argtype_ae{fsym, ae}});
      println(m::concat{
	"funcname=", m::to_string{fsym}, " pass=cv name=", ae, 
	" type=", argtype_ae{fsym, ae}});
      println(m::concat{
	"funcname=", m::to_string{fsym}, " pass=mr name=", ae, 
	" type=", argtype_ae{fsym, ae}});
      println(m::concat{
	"funcname=", m::to_string{fsym}, " pass=cr name=", ae, 
	" type=", argtype_ae{fsym, ae}});
    }
    // println(m::concat{fsym, ": ", argexp_list{fsym}});
  }
}

