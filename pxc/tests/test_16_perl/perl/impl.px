public function {t} sv convert_to_perlsv(t const& x)
{
  if (eq{t, sv}) {
    return x;
  } else if (eq{t, string}) {
    return string_to_sv(x);
  } else if (is_fp{t}) {
    return fp_to_sv{t}(x);
  } else if (is_integral_enum_bitmask{t}) {
    return integral_to_sv{t}(x);
  } else if (eq{t, unit}) {
    return sv();
  } else if (eq{t, bool}) {
    return integral_to_sv{t}(x);
  } else {
    return object_to_sv(x);
  }
}

public function {t} void perlsv_get_value(sv const& x,
  value_or_ref{t} mutable& sto)
{
  if (eq{t, sv}) {
    sto.set_sv(x);
  } else if (eq{t, string}) {
    sto.set_string(x);
  } else if (is_fp{t}) {
    sto.set_fp(x);
  } else if (is_integral_enum_bitmask{t}) {
    sto.set_integral(x);
  } else if (eq{t, bool}) {
    sto.set_integral(x);
  } else if (eq{t, unit}) {
    /* nothing to do */
  } else {
    /* not reached */
    sto.notreached();
  }
}

