namespace ptrarg;
private import io;

macro ulongref ref{ulong};
macro ulongcref cref{ulong};

function ulongref addptr(ulongref ap, ulongref bp)
{
  return (*ap + *bp);
  ulongref r = (*ap + *bp);
  return r;
}

struct foo {
  int fx;
  int fy;
}

{
  ulongref x = 3U;
  ulongref y = 4U;
  ulongcref z = addptr(x, y);
  // var z:(cref ulong int) = addptr(x, y);
  // *z = 99;
  // &3 = z;
  io::println(*z);
}

{
  ref{foo} fp = foo();
  fp->fx = 3;
  fp->fy = 4;
  io::println(fp->fx * fp->fy);
}

