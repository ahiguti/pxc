import common -;
namespace filetest2;

function void ft1(string const& fn)
{
  println("ft1");
  var eh = io::errno::errno_handler(error::handle_keep);
  io::file::statbuf stbuf;
  io::file::io_stat(io::system, fn, stbuf, eh);
  if (eh.get() != io::errno::EOK) {
    print("failed to stat: ");
    println(fn);
    print("error = ");
    println(eh.get());
  } else {
    println(stbuf.st_size);
  }
}

function void ft2(string const& fn)
{
  println("ft2");
  var eh = io::errno::errno_handler(error::handle_keep);
  string s;
  io::file::io_read_file(io::system, fn, s, eh);
  print(s);
}

ft1("hoge.txt");
ft2("hoge.txt");
ft1("hoge2.txt");
ft2("hoge2.txt");

