import test_common "";
namespace filetest;
import io;

function void ft1()
{
  string fn = "hoge.txt";
  io::statbuf stbuf;
  int r = io::main.stat(fn, stbuf);
  if (r != 0) {
    io::print("failed to stat: ");
    io::println(fn);
  } else {
    io::println(stbuf.st_size);
  }
}

function void ft2()
{
  string s;
  io::main.read_file("hoge.txt", s);
  io::print(s);
}

ft1();
ft2();

