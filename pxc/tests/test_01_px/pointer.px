namespace ptrtest;
private import io;

macro ulongptr ptr{ulong};
macro ulongcptr cptr{ulong};

function ulongptr addptr(ulongptr ap, ulongptr bp)
{
  return ptr(*ap + *bp);
  ulongptr r = ptr(*ap + *bp);
  return r;
}

struct foo {
  int fx;
  int fy;
}

{
  ulongptr x = ptr(3U);
  ulongptr y = ptr(4U);
  ulongcptr z = addptr(x, y);
  // var z:(cptr ulong int) = addptr(x, y);
  // *z = 99;
  // &3 = z;
  io::println(*z);
}

{
  ptr{foo} fp = ptr(foo());
  fp->fx = 3;
  fp->fy = 4;
  io::println(fp->fx * fp->fy);
}

