public namespace mar2;
import common -;
import orb -;

threaded interface ifoo <remote> {
  public function int m(int x);
  public function string mfhoge(string x, string y);
  public function string mffuga(string x, string y) const;
}

threaded struct foo <ifoo> {
  public int v;
  public function int m(int x) { return x + v; }
  public function string mfhoge(string x, string y) {
    string r = x;
    r.append(y);
    return r;
  }
  public function string mffuga(string x, string y) const {
    string r = y;
    r.append(x);
    return r;
  }
}

private threaded struct transport_dummy <orb_transport> {
  public function void send_receive(string mutable& rbuf,
    string mutable& wbuf) { }
}


private function void t1()
{
  ptr{orb} op = make_ptr{orb}(make_ptr{transport_dummy}());
  orb mutable& o = *op;
  tree_map{int, string} ser;
  for (int i : 0 .. 10) {
    ptr{foo} p = make_ptr(foo());
    p->v = i;
    marshal_reference{ptr{ifoo}}(o, p);
    string s = o.wbuf;
    ser[i] = s;
    o.wbuf.clear();
    println(p);
    // println(s);
  }
  for (int i : 0 .. 10) {
    string s = ser[i];
    o.rbuf = s;
    size_t pos = 0;
    size_t epos = o.rbuf.size();
    // println(s);
    ptr{ifoo} p = unmarshal_reference{ptr{ifoo}}(op, pos, epos);
    println(p->m(3));
  }
}

t1();
