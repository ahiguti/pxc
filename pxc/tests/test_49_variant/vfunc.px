function void test1() {
  variant v;
  v.ptrval = to_ptr{stub_function{foo}}();
  farray{variant, 2} arg;
  arg[0].longval = 9;
  arg[1].stringval = "abc";
  variant x = v.ptrval->invoke("", arg); // x = foo(9, "abc")
  println(x);
}

function void test2() {
  variant v;
  v.ptrval = to_ptr{stub_function{bar}}();
  farray{variant, 2} arg;
  arg[0].longval = 9;
  arg[1].stringval = "abc";
  variant x = v.ptrval->invoke("", arg); // x = bar(9, "abc")
  arg[0].stringval = "xyz";
  variant y = x.ptrval->invoke("m1", arg); // y = x.m1("xyz")
  println(y);
}

function void test3() {
  variant v;
  v.ptrval = to_ptr{stub_variable{"var1", "vfunc", 1}}();
  farray{variant, 0} arg0;
  variant x = v.ptrval->invoke("", arg0); // x = var1
  println(x);
  farray{variant, 1} arg1;
  arg1[0] = to_variant(345);
  v.ptrval->invoke("", arg1); // var1 = 345
  variant y = v.ptrval->invoke("", arg0); // y = var1
  println(y);
}

