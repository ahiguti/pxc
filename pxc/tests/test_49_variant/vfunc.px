threaded function string foo(int x, string y)
{
  y.append(to_string(x));
  return y;
}

mtvaluetype struct bar(int x, string y)
{
  string value = y;
  value.append(to_string(x));
  function string m1(string z) const {
    string r = value;
    r.append(z);
