function {func} void do_test() {
  double tsum = 0.0;
  for (size_t i : 0 .. 20) {
    const t0 = gettimeofday_double(system);
    const r = func();
    const t1 = gettimeofday_double(system);
    println(m::full_string{func}, r, t1 - t0);
    tsum += t1 - t0;
  }
  println(m::full_string{func}, "TOTAL", tsum);
}

