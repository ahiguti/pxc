public namespace ifcase2;
import common -;

union foo {
  int x;
  string y;
}

{
  foo v;
  v.x = 100;
  v.y = "abc";
  /* if-case */
  if (int const& x: v.x) { /* ok to pass union field by const reference,
		           because rvalue of a union field is always copied */
    println(x);
  } else if (string y: v.y) {
    println(y);
  }
}

