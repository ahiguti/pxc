	if (ev.WindowEventID() == SDL_WINDOWEVENT_RESIZED) {
	  const w = ev.WindowEventData1();
	  const h = ev.WindowEventData2();
	  sdl.LogWarn(SDL_LOG_CATEGORY_TEST, join{""}("w=", w, " h=", h));
	  reshape(w, h);
	}
      } else if (etype == SDL_QUIT) {
	done = true;
	break;
      }
    }
    save_ticks(1);
    {
      draw_frame(sdl);
      save_ticks(2);
      ++frames;
      uint t = sdl.GetTicks();
      if (t - t0 >= 1000) {
	const seconds = static_cast{float}(t - t0) / 1000.0;
	const fps = static_cast{float}(frames) / seconds;
	sdl.LogWarn(SDL_LOG_CATEGORY_TEST,
	  join{" "}(frames, "frames in", seconds, "seconds =", fps, "fps"));
	sdl.LogWarn(SDL_LOG_CATEGORY_TEST,
	  join{" "}("ticks: ", ticks_sum));
	ticks_sum = ticks_t();
	t0 = t;
	frames = 0;
      }
      gears_angle += static_cast{float}(t - tprev) / 20.0;
      tprev = t;
      if (gears_angle > 360.0) {
	gears_angle -= 360.0;
      }
      view_rotx = gears_angle;
      if (t - t1 >= 10) {
	if (t - t1 >= 10) {
	  t1 += 10;
	}
	const ks = SDL2::KeyboardState(sdl);
	if (ks.Key(SDL_SCANCODE_ESCAPE) != 0) { done = 1; }
	if (ks.Key(SDL_SCANCODE_UP) != 0) { view_rotx += 1.0; }
	if (ks.Key(SDL_SCANCODE_DOWN) != 0) { view_rotx -= 1.0; }
	if (ks.Key(SDL_SCANCODE_LEFT) != 0) { view_roty += 1.0; }
	if (ks.Key(SDL_SCANCODE_RIGHT) != 0) { view_roty -= 1.0; }
      }
    }
    save_ticks(3);
    sdl.GL_SwapWindow(wnd);
    save_ticks(4);
  }
}

