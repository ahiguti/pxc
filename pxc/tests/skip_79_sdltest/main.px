  */

  /* draw outward faces of teeth */
  float cos0 = 1.0;
  float sin0 = 0.0;
  nor.push_back(cos0);
  nor.push_back(sin0);
  nor.push_back(0.0);
  nor.push_back(cos0);
  nor.push_back(sin0);
  nor.push_back(0.0);
  for (int i : 0 .. teeth_i) {
    const angle = M_PI * 2.0 * static_cast{float}(i) / teeth;
    /* 0 */
    vec.push_back(r1 * cosf(angle));
    vec.push_back(r1 * sinf(angle));
    vec.push_back(width * 0.5);
    vec.push_back(r1 * cosf(angle));
    vec.push_back(r1 * sinf(angle));
    vec.push_back(-width * 0.5);
    mutable u = r2 * cosf(angle + da) - r1 * cosf(angle);
    mutable v = r2 * sinf(angle + da) - r1 * sinf(angle);
    const len = sqrtf(u * u + v * v);
    u /= len;
    v /= len;
    nor.push_back(v);
    nor.push_back(-u);
    nor.push_back(0.0);
    nor.push_back(v);
    nor.push_back(-u);
    nor.push_back(0.0);
    /* 1 */
    vec.push_back(r2 * cosf(angle + da));
    vec.push_back(r2 * sinf(angle + da));
    vec.push_back(width * 0.5);
    vec.push_back(r2 * cosf(angle + da));
    vec.push_back(r2 * sinf(angle + da));
    vec.push_back(-width * 0.5);
    nor.push_back(cosf(angle));
    nor.push_back(sinf(angle));
    nor.push_back(0.0);
    nor.push_back(cosf(angle));
    nor.push_back(sinf(angle));
    nor.push_back(0.0);
    /* 2 */
    vec.push_back(r2 * cosf(angle + da * 2.0));
    vec.push_back(r2 * sinf(angle + da * 2.0));
    vec.push_back(width * 0.5);
    vec.push_back(r2 * cosf(angle + da * 2.0));
    vec.push_back(r2 * sinf(angle + da * 2.0));
    vec.push_back(-width * 0.5);
    u = r1 * cosf(angle + da * 3.0) - r2 * cosf(angle + da * 2.0);
    v = r1 * sinf(angle + da * 3.0) - r2 * sinf(angle + da * 2.0);
    nor.push_back(v);
    nor.push_back(-u);
    nor.push_back(0.0);
    nor.push_back(v);
    nor.push_back(-u);
