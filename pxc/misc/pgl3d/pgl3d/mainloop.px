  pgs.prepare(local_whole_instances, nfac);
  /*
  pgs.prepare_vertex_buffers();
  pgs.prepare_whole_instances(local_whole_instances);
  pgs.prepare_node_factory(nfac);
  */

  /* spawn motion thread */
  motion_thread_object mto = motion_thread_object(nfac, local_whole_instances,
    app.get_scene_shared(), pgs.pidft);

  size_t saved_stat_num_objects;

  const test_scroll_mode = false;

  projection_info cam_drawing_frame;

  frame_statistics mutable fr;
  framerate_control mutable frctl = framerate_control(sdlc.vsync);

  int fullscreen = 0;
  function void toggle_fullscreen()
  {
    fullscreen = fullscreen != 0 ? 0 : 1;
    sdllog("fullscreen=", fullscreen);
    SDL_Enum flag = 0;
    if (m::ne{is_macos, 0}) {
      flag = SDL_WINDOW_FULLSCREEN_DESKTOP;
    } else {
      flag = SDL_WINDOW_FULLSCREEN;
    }
    SDL_SetWindowFullscreen(sdlc.sdl_window, fullscreen != 0 ? flag : 0);
  }

  string_map commands;
  function void do_commands()
  {
    if (!commands.empty()) {
      for (const& k, const& v: commands) {
	if (k == "vsync") {
	  frctl.toggle_vsync();
	} else if (k == "fullscreen") {
	  toggle_fullscreen();
	}
      }
      commands.clear();
    }
  }

  bool done = false;
  bool paused = false;
  while (!done) {
    bool scene_next_flag = false;
    SDL_Event ev;
